<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Baloo" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>

    <div class="topnav" id="myTopnav">
        <a href="@Url.Action("Index", "Home")"><img src="~/img/logo.png" style="height:70px;"/></a>
        <a href="@Url.Action("Index", "Home")" id="home">Home</a>
        <a href="@Url.Action("Index", "Signs")" id="library">Library</a>
        <a href="@Url.Action("Index", "Images")" id="cards">Flashcards</a>
        <a href="@Url.Action("quizview", "TestScores")" id="quiz">Quiz</a>
        <a href="@Url.Action("Index", "TestScores")" id="scores">Progress</a>
        <a class="partial">@Html.Partial("_LoginPartial")</a>
    <div class="bg">
    </div>

        <a href="javascript:void(0);" class="icon" onclick="myFunction()">
            <i class="fa fa-bars"></i>
        </a>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<script>
    function myFunction() {
        var x = document.getElementById("myTopnav");
        if (x.className === "topnav") {
            x.className += " responsive";
        } else {
            x.className = "topnav";
        }
    }
</script>