@model ABSignV2.Image
@{
    ViewBag.Title = "Create";
}

<style>
    body {
        background-color: #17A2B8;
        font-family: Arial, Helvetica, sans-serif;
        color: #fff;
    }

    h2, h4 {
        color: #fff;
        font-family: 'Baloo', cursive;
    }

    #back a {
        color: #fff;
        font-size: 1.2rem;
        text-transform: uppercase;
        text-decoration: underline;
        font-family: 'Baloo', cursive;
        float: right;
    }
</style>

<h2>Upload Your Image</h2>

@using (Html.BeginForm("Create", "Images", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @*@Html.LabelFor(model => model.ImageBin, htmlAttributes: new { @class = "control-label col-md-2" })*@
            Click choose file below to upload your image.<br /><br />
                <div class="col-md-10">
                    
                    <input type="file" id="image1" name="image1" />

                    @*@Html.EditorFor(model => model.ImageBin, new { htmlAttributes = new { @class = "form-control" } })*@
                    @*@Html.ValidationMessageFor(model => model.ImageBin, "", new { @class = "text-danger" })*@
                </div>
</div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
